							<title type="uniform" xml:lang="it">
								<persName ref="#VB" role="composer">Vincenzo Bellini</persName> a <persName ref="#GGa" role="cavalier">Giovanni Galeota</persName>, in <placeName ref="#Paris">Parigi</placeName>, <date when="1834-02-14">14 febbraio 1834</date>
